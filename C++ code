#include <iostream>   // for input and output

using namespace std;

int main() {
    // Declare variables
    string name;
    int age;

    // Ask user for input
    cout << "Enter your name: ";
    cin >> name;

    cout << "Enter your age: ";
    cin >> age;

    // Display output
    cout << "\nHello " << name << "! You are " << age << " years old." << endl;

    return 0;
}
